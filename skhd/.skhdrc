############################################################
# Key Remaps
############################################################

ctrl - v : skhd -k "cmd - v"

meh - y : skhd -k "cmd - c"
meh - p : skhd -k "cmd - v"

############################################################
# Focus specific applications
############################################################
alt - t : osascript -e 'tell application "Alacritty" to activate'
alt - b : ~/.dotfiles/skhd/browser/target/release/browser
alt - s : osascript -e 'tell application "Slack" to activate'
alt - z : osascript -e 'tell application "Zed" to activate'
alt - i : osascript -e 'tell application "Hoppscotch" to activate'
alt - o : osascript -e 'tell application "Obsidian" to activate'
alt - c : osascript -e 'tell application "Visual Studio Code" to activate'
alt - m : osascript -e 'tell application "Spotify" to activate'

# Close current active application
# Just use CMD + w
